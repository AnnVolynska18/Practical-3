#include <iostream>
#include <cmath>
#include <string>

using namespace std;

void task1_cramer() {
    cout << "--- Завдання 1: Метод Крамера ---\n";

    // Коефіцієнти системи:
    // a1=3, b1=2, c1=7
    // a2=4, b2=-5, c2=40
    double a1 = 3.0, b1 = 2.0, c1 = 7.0;
    double a2 = 4.0, b2 = -5.0, c2 = 40.0;

    // 1. Головний визначник Delta
    double Delta = a1 * b2 - b1 * a2;
    cout << "Визначник Delta = " << Delta << endl;

    if (Delta == 0) {
        // Перевірка на безліч розв'язків або їх відсутність (опущено для простоти)
        cout << "Система не має єдиного розв'язку (Delta = 0).\n";
        return;
    }

    // 2. Визначник Delta_x
    double Delta_x = c1 * b2 - b1 * c2;
    cout << "Визначник Delta_x = " << Delta_x << endl;

    // 3. Визначник Delta_y
    double Delta_y = a1 * c2 - c1 * a2;
    cout << "Визначник Delta_y = " << Delta_y << endl;

    // 4. Розв'язок
    double x = Delta_x / Delta;
    double y = Delta_y / Delta;

    cout << "\nРозв'язок:\n";
    cout << "x = " << x << endl;
    cout << "y = " << y << endl;
    cout << "------------------------------------------\n";
}
